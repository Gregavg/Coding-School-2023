@model Session_23.Models.Pet.PetDetailsDto;

@{
    ViewData["Title"] = "Details Pet";
}

<h1>Details</h1>

<div>
    <h4>Pet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Breed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnimalType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PetStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PetStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@if (Model.Transactions.Count() > 0) {
    <hr />
        <div>
            <h5>Pet's Transactions:</h5>
                <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Transactions[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transactions[0].Customer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transactions[0].Employee)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transactions[0].PetFood)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transactions[0].PetFoodQty)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transactions[0].PetFoodPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transactions[0].TotalPrice)
                        </th>
                    </tr>
                </thead>
                <tbody>  
                @foreach (var item in Model.Transactions) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PetFood.AnimalType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PetFoodQty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PetFoodPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
}
