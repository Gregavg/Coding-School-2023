@model Session_23.Models.Customer.CustomerDetailsDto

@{
    ViewData["Title"] = "Details Customer";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tin)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@if (Model.Transactions.Count() > 0) {
<hr />
<div>
    <h5>Customer's Transactions:</h5>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].Pet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].PetPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].PetFood)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].PetFoodQty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].PetFoodPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transactions[0].TotalPrice)
                </th>
            </tr>
        </thead>
        <tbody>  
                     @foreach (var item in Model.Transactions) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pet.Breed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PetPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PetFood.AnimalType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PetFoodQty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PetFoodPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPrice)
                            </td>
                        </tr>
                    }
        </tbody>
    </table>
</div>
}

