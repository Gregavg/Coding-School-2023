@model Session_23.Models.PetFood.PetFoodDetailsDto;

@{
    ViewData["Title"] = "Details Pet Food";
}

<h1>Details</h1>

<div>
    <h4>PetFood</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnimalType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@if (Model.Transactions.Count() > 0) {
        <hr />
            <div>
                <h5>Pets's Transactions:</h5>
                    <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Transactions[0].Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Transactions[0].Customer)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Transactions[0].Employee)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Transactions[0].Pet.Breed)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Transactions[0].Pet.AnimalType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Transactions[0].TotalPrice)
                            </th>
                        </tr>
                    </thead>
                    <tbody>  
                @foreach (var item in Model.Transactions) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pet.Breed)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pet.AnimalType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalPrice)
                                </td>
                            </tr>
                }
                    </tbody>
                </table>
            </div>
}
